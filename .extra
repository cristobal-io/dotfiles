# List all files colorized in long format - Added MB
alias l="ls -hlF ${colorflag}"

# List all files colorized in long format, including dot files - Added MB
alias la="ls -halaF ${colorflag}"

# List only directories - Added MB
alias lsd="ls -halF ${colorflag} | grep --color=never '^d'"

# List all files and recursive directories and sort by size
alias dus='du -hs ./* | sort --n'
alias dusg='du -hs ./* | sort --n | grep G'

# Computer sleep in combination with  /etc/rc.displaysleep
alias sl="pmset sleepnow"

# Prevent computer from sleep for 60 minutes.
alias cf="caffeinate -d -t 3600 &"

#linux
alias pbcopyl='xclip -selection clipboard'
alias pbpastel='xclip -selection clipboard -o'
alias go='xdg-open'

# git autocompletion
if [ -f ~/.dotfiles/dotfiles/.git-completion.bash ]; then
