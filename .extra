# Personal shortcuts


alias firefox="open /Applications/Firefox.app"
alias chrome="open /Applications/Google\ Chrome.app"
alias c="clear"
alias mail="open /Applications/Mail.app"
alias code="cd ~/Code/"
alias dp="cd ~/Dropbox"
alias dpp="cd ~/Dropbox/Programacion"
alias d="cd ~/Documents/"
alias dotfiles="cd ~/.dotfiles/dotfiles/"
alias dotfiles_update="source ~/.dotfiles/dotfiles/bootstrap.sh"
alias bermi="cd ~/Dropbox/Programacion/Bermi\ Sessions/"

#Change DNS
alias dnsGoogle="sudo networksetup -setdnsservers Wi-Fi 8.8.8.8 8.8.4.4"
alias dnsUnblockUs="sudo networksetup -setdnsservers Wi-Fi 208.122.23.23 208.122.23.22"
alias dnsEmpty="sudo networksetup -setdnsservers Wi-Fi empty"
alias dnsUnblockUs_Ethernet="sudo networksetup -setdnsservers Ethernet 208.122.23.23 208.122.23.22"
alias dnsEmpty_Ethernet="sudo networksetup -setdnsservers Ethernet empty"

